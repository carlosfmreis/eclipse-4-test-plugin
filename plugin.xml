<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="eu.tardis.wizards.categories.tardis"
            name="TaRDIS">
      </category>
      <wizard
            canFinishEarly="false"
            category="eu.tardis.wizards.categories.tardis"
            class="eu.tardis.wizards.NewProjectWizard"
            hasPages="true"
            icon="assets/tardis-logo.jpg"
            id="eu.tardis.wizards.newproject"
            name="Create a TaRDIS Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="eu.tardis.wizards.newproject">
         </newWizardShortcut>
         <perspectiveShortcut
               id="eu.tardis.perspectives.tardis">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="eu.tardis.perspectives.tardis">
         <view
               closeable="false"
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               moveable="false"
               ratio="0.3"
               relationship="left"
               relative="org.eclipse.ui.editors"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="eu.tardis.views.settings"
               minimized="false"
               moveable="false"
               ratio="0.8"
               relationship="bottom"
               relative="org.eclipse.ui.editors"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.views.ProblemView"
               minimized="false"
               moveable="false"
               relationship="stack"
               relative="eu.tardis.views.settings"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               moveable="false"
               relationship="stack"
               relative="eu.tardis.views.settings"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.debug.ui.DebugView"
               minimized="false"
               moveable="false"
               relationship="stack"
               relative="eu.tardis.views.settings"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="eu.tardis.views.categories.tardis"
            name="TaRDIS">
      </category>
      <e4view
            category="eu.tardis.views.categories.tardis"
            class="eu.tardis.views.SettingsView"
            icon="assets/tardis-logo.jpg"
            id="eu.tardis.views.settings"
            name="TaRDIS Settings"
            restorable="true">
      </e4view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               icon="assets/tardis-logo.jpg"
               label="TaRDIS"
               tooltip="TaRDIS">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Settings"
                  style="push"
                  tooltip="Settings">
               <parameter
                     name="org.eclipse.ui.views.showView.viewId"
                     value="eu.tardis.views.settings">
               </parameter>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="eu.tardis.natures.tardis"
         name="TaRDIS Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="eu.tardis.natures.TardisNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="assets/tardis-logo.jpg"
            id="eu.tardis.natures.images.tardis"
            natureId="eu.tardis.natures.tardis">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="eu.tardis.eu.tardis.perspectives.TardisPerspective"
            icon="assets/tardis-logo.jpg"
            id="eu.tardis.perspectives.tardis"
            name="TaRDIS Perspective">
      </perspective>
   </extension>

</plugin>
